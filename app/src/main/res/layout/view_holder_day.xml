<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:gravity="bottom"
    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
    android:orientation="vertical"
    android:id="@+id/card_view">

    <RelativeLayout
        android:id="@+id/relative_layout_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingStart="@dimen/nav_header_vertical_spacing"
        android:paddingEnd="@dimen/nav_header_vertical_spacing"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"

        >

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_today_black_48"/>

        <TextView
            android:id="@+id/text_view_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="Resource Name"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/image_view_evaluated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_toStartOf="@id/image_view_expand"
            android:src="@drawable/baseline_attachment_black_18"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_view_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/baseline_expand_more_black_18"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_training_sessions"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@id/text_view_label"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
